[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = ""
readme = "README.md"
authors = [
  {name = "Eugene Bulog"}
]
maintainers = [
  {name = "Eugene Bulog"}
]
classifiers = [

]
license = {text = "MIT license"}
dependencies = [

]

[project.optional-dependencies]
dev = [
  "pre-commit",
  "copier"
]

[project.urls]

bugs = "https://github.com/Eugene-Bulog/{{ project_name }}/issues"
homepage = "https://github.com/Eugene-Bulog/{{ project_name }}"

[tool.setuptools]
package-dir = {"" = "src"}

[tool.setuptools.package-data]
"*" = ["*.*"]

[tool.black]
line-length = 120
target-version = ['py310']

[tool.flake8]
ignore = []
per-file-ignores = []
max-line-length = 120
count = true

[tool.isort]
multi_line_output = 3
line_length = 120
include_trailing_comma = true
